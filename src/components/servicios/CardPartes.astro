---
interface Props {
  nombre: string;
  descripcion: string;
  icono: string;
}

const { nombre, descripcion, icono } = Astro.props;
---

<div class="w-full bg-color1 flex flex-col justify-center items-center p-4 rounded-xl shadow-shadow1">
  <i class={`fa ${icono} text-color6 md:first:text-5xl text-4xl mb-5`}></i>
  <h2 class="font-title md:text-2xl text-xl font-bold text-color7 mb-1">{nombre}</h2>
  <p class="font-parrafo text-color4 text-center">{descripcion}</p>
</div>
