---
import CardPartes from './CardPartes.astro';
import platillos from '../../platillos.json';
---


  <main class="w-11/12 md:w-4/5 mx-auto">
    <h1 class="text-center text-3xl md:text-6xl font-title font-bold text-color6 mb-4">Nuestros Servicios</h1>
    <div class="w-full grid md:grid-cols-3 grid-cols-2 gap-6">
      {platillos.servicios.map(service => (
        <CardPartes 
          nombre={service.nombre} 
          descripcion={service.descripcion} 
          icono={service.icono} />
      ))}
    </div>
  </main>

