---
const datos = [
    {rutaSocial:'#', rutaLink:'/', iconSocial:'fa-brands fa-facebook', datoSocial:'Facebook', 
    iconLink:'fa-solid fa-house', datoLink:'Inicio', hover:'group-hover:text-[#1877F2]'},
    {rutaSocial:'#', rutaLink:'/servicios', iconSocial:'fa-brands fa-square-instagram', datoSocial:'Instagram', 
    iconLink:'fa-solid fa-calendar', datoLink:'Servicios', 
    clase:'degradado'},
    {rutaSocial:'#', rutaLink:'/platillos', iconSocial:'fa-brands fa-square-twitter', datoSocial:'Twiter', 
    iconLink:'fa-solid fa-utensils', datoLink:'Platillos', hover:'group-hover:text-[#1DA1F2]'},
    {rutaSocial:'#', rutaLink:'/reserva', iconSocial:'fa-brands fa-square-whatsapp', datoSocial:'WhastApp', 
    iconLink:'fa-solid fa-address-book', datoLink:'Reserva', hover:'group-hover:text-[#0ab649]'}
]
---
<div class=" w-full md:w-4/5 md:mx-auto md:grid md:grid-cols-4 md:gap-x-5">
        <div  class="w-full ">
            <h3 class="w-full text-color3 border-b-2 border-[#213652] text-2xl mb-3 text-center md:text-left md:pb-3 xl:pb-3">Contacto</h3>
            <p class="text-color4 font-parrafo px-6 md:px-0"><span class="font-bold">Teléfono:</span> (123) 456-7890</p>
            <p class="text-color4 font-parrafo px-6 md:px-0"><span class="font-bold">Email:</span> info@restaurante.com</p>
            <p class="text-color4 font-parrafo px-6 md:px-0"><span class="font-bold">Dirección:</span> Calle Ejemplo 123, Ciudad, País</p>
        </div>
        <div id="responsive" class="md:w-full">
            <h3 class="w-full text-color3 border-b-2 border-[#213652] pb-3 pl-3 text-2xl mb-3">Redes Sociales</h3>
            <ul class="w-full mb-4">
                {
                    datos.map(dato => (
                        <li class='w-full '>
                            <a class={`w-full py-3  group flex ${dato.clase}`}  href={dato.rutaSocial}>
                                    <h4 class={`w-3/4 text-color4 font-bold text-parrafo ${dato.hover}`}>{dato.datoSocial}</h4>
                                    <span class={dato.hover}><i class={dato.iconSocial}></i></span>
                            </a>
                        </li>
                    ))
                }
                
            </ul>
        </div>
        <div id="responsive" class="w-full">
            <h3 class="w-full text-color3 border-b-2 border-[#213652] pb-3 pl-3 text-2xl mb-3">Navegación</h3>
            <ul class="nav-links">
                {
                    datos.map(dato => (
                        <li class="w-full">
                            <a class="w-full flex py-3 group" href={dato.rutaLink}>
                                    <h4 class="w-3/4 pl-3 text-color4 font-bold text-parrafo group-hover:text-base">{dato.datoLink}</h4>
                                    <span><i class={`${dato.iconLink} group-hover:text-base`}></i></span>
                            </a>
                        </li>
                    ))
                }
                
                
            </ul>
        </div>
        <div class="w-full  md:w-full ">
            <h3 class="w-full py-2 md:py-0 xl:py-0 text-color3 border-b-2 shadow-[0_0_4px_#213652] md:shadow-none xl:shadow-none mt-6 md:mt-0 border-[#213652] md:pb-3 pl-3 xl:pb-3 text-2xl mb-3 md:mb-3 text-center md:text-left">Sobre Nosotros</h3>
            <p class="text-justify text-parrafo text-color4 px-6 md:px-0">En Restaurante Ejemplo, ofrecemos una experiencia culinaria única con los mejores ingredientes y un ambiente acogedor. ¡Ven a visitarnos!</p>
        </div>
</div>
    <div class="w-full h-10 bg-color9 flex justify-center items-center ">
        <p class='text-color1 font-title font-bold'>&copy; 2025 Restaurante Ejemplo. Todos los derechos reservados.</p>
    </div>
<style>
    .degradado:hover { 
        background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #eb7608 72%, #eb089f 75%, #eb1708 76%, #fd7b02 100%); 
        -webkit-background-clip: text; 
        -webkit-text-fill-color: transparent; 
        background-clip: text; 
        text-fill-color: transparent; 
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", () => {
      // Seleccionar todos los elementos con el ID 'responsive'
      const responsiveElements = document.querySelectorAll("#responsive");
  
      const toggleHiddenClass = () => {
        // Detectar el ancho de la ventana
        if (window.innerWidth > 760) {
          responsiveElements.forEach(element => {
            element.classList.remove("hidden");
          });
        } else {
          responsiveElements.forEach(element => {
            element.classList.add("hidden");
          });
        }
      };
  
      // Ejecutar la función al cargar la página
      toggleHiddenClass();
  
      // Ejecutar la función cada vez que la ventana cambia de tamaño
      window.addEventListener("resize", toggleHiddenClass);
    });
  </script>
  