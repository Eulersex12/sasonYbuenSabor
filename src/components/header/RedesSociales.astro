---
interface Props {
    redStyle: string
}
const { redStyle } = Astro.props;
const redes = [
    {ruta:'#', name:'fa-brands fa-square-facebook', style:'hover:text-[#1877F2]'},
    {ruta:'#', name:'fa-brands fa-square-instagram', style:'color'},
    {ruta:'#', name:'fa-brands fa-square-twitter', style:'hover:text-[#1da1f2]'},
    {ruta:'#', name:'fa-brands fa-square-whatsapp', style:'hover:text-[#25d366]'}
]
---
<ul class=`${redStyle}`>
    {
        redes.map(red => (
        <li class='w-full h-full'>
            <a class="w-full h-full flex justify-center items-center" href={red.ruta}>     
                <span class="text-2xl"><i class={`${red.name} ${red.style}`}></i></span>
            </a>
        </li>
        ))
    }
</ul>
<style>
    .color:hover { 
    background: linear-gradient(45deg, 
        #f09433 0%,  /* Amarillo-naranja */
        #f38330 20%, /* Naranja */
        #e6683c 40%, /* Naranja-rojo */
        #dc2743 60%, /* Rojo */
        #cc2366 80%, /* Púrpura */
        #bc1888 100% /* Púrpura intenso */
    ); 
    -webkit-background-clip: text; 
    -webkit-text-fill-color: transparent; 
    background-clip: text; 
    text-fill-color: transparent; 
}
</style>